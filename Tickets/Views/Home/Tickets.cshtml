
@{
    ViewBag.Title = "Tickets";
    Layout = "~/Views/Shared/layout.cshtml";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                <strong>Details</strong>
            </h2>
            <hr>
            <p>
                <h4>Description of event</h4> 
                It has long been a Summit Band tradition at the New Year to present a program consisting of the lively and at the same time nostalgic music from the vast repertoire of the Johann Strauss family and its contemporaries. 
                <h4>Time</h4> 
                11:00 AM, January 1, 2016 
                <h4>Cost per ticket</h4>
                $5.00
            </p>
            <p>&nbsp; </p>
        </div>
    </div>
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                <strong>Tickets</strong>
            </h2>
            <hr>
            <p>
                &spades; <label>Pay using paypal</label>
                <form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post" target="_top">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="5UZJ67MDAD2TJ">
                    <input type="hidden" name="custom" value="@ViewBag.custom" />
                    <input type="image" src="https://www.sandbox.paypal.com/en_US/i/btn/btn_paynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                    <img alt="" border="0" src="https://www.sandbox.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1">
                </form>
            </p>
            <p>&nbsp;</p>
            <p>
                &spades; <label>Pay by credit card</label>
                <form role="form" data-toggle="validator" action="/Home/Thankyou">
                    <div class="form-group col-lg-7">
                        <label>Card Number</label>
                        <input type="number" class="form-control input-sm" name="card-number" id="card-number" placeholder="Debit/Credit Card Number"
                               required>
                    </div>
                    <div class="form-group col-lg-7">
                        <label>Name on Card</label>
                        <input type="text" class="form-control input-sm" name="card-holder-name" id="card-holder-name" placeholder="Card Holder's Name" required>
                    </div>
                    <div class="form-group col-lg-7">
                        <label>Expiration Date</label>
                        <input type="number" class="form-control input-sm" name="expiry-month" id="expiry-month" placeholder="Month: (ex) 03" required>
                        <input type="number" class="form-control input-sm" name="expiry-month" id="expiry-month" placeholder="Year: (ex) 2017" required>
                    </div>
                    <div class="form-group col-lg-7">
                        <label>Card CVV</label>
                        <input type="number" class="form-control input-sm" name="cvv" id="cvv" placeholder="Security Code" required>
                    </div>
                    <div class="form-group col-lg-12">
                        <button type="submit" class="btn btn-warning">Pay Now</button>
                    </div>
                </form>
            </p>
        </div>
    </div>
</div>

