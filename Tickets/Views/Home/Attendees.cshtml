@model PagedList.IPagedList<Tickets.Attendee>
@using PagedList.Mvc;
<link href="~/Contents/css/PagedList.css" rel="stylesheet" />

@{
    ViewBag.Title = "Attendees";
    Layout = "~/Views/Shared/layout.cshtml";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                <strong>Attendees</strong>
            </h2>
            <hr>
            <div class="table-responsive">
                <table class="table table-condensed table-hover table-striped">
                    <tr>
                        <th class="text-center visible-lg">Date</th>
                        <th class="text-center">FirstName</th>
                        <th class="text-center">LastName</th>
                        <th class="text-center visible-lg">SessionID</th>
                        <th class="text-center visible-lg">TransactionID</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-center visible-lg">Amount</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="visible-lg">@Html.DisplayFor(modelItem => item.paymentDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.payerFisrtName)</td>
                            <td>@Html.DisplayFor(modelItem => item.payerLastName)</td>
                            <td class="visible-lg">@Html.DisplayFor(modelItem => item.custom)</td>
                            <td class="visible-lg">@Html.DisplayFor(modelItem => item.txnID)</td>
                            <td class="text-right">@Html.DisplayFor(modelItem => item.quantity)</td>
                            <td class="text-right visible-lg">@string.Format("{0:C}", item.paymentGross)</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="row text-center">
                @Html.PagedListPager(Model, page => Url.Action("Attendees", new { page }))
            </div>
        </div>
    </div>
</div>